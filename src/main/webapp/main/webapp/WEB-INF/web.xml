<?xml version="1.0" encoding="UTF-8"?>
		
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   		 version="3.1">
		<servlet>
			<servlet-name>AddHospitalServlet</servlet-name>
			<servlet-class>com.hospital.AddHospitalServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>AddHospitalServlet</servlet-name>
			<url-pattern>/insert</url-pattern>
		</servlet-mapping>	
		
		<servlet>
			<servlet-name>SearchHospitalservlet</servlet-name>
			<servlet-class>com.hospital.SearchHospitalservlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>SearchHospitalservlet</servlet-name>
			<url-pattern>/search</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>UpdateHospitalServlet</servlet-name>
			<servlet-class>com.hospital.UpdateHospitalServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>UpdateHospitalServlet</servlet-name>
			<url-pattern>/update</url-pattern>
		</servlet-mapping>	
		
		<servlet>
			<servlet-name>DeleteHospitalServlet</servlet-name>
			<servlet-class>com.hospital.DeleteHospitalServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>DeleteHospitalServlet</servlet-name>
			<url-pattern>/delete</url-pattern>
		</servlet-mapping>	
		
		<servlet>
    <servlet-name>ViewAllHospitalsServlet</servlet-name>
    <servlet-class>com.hospital.ViewAllHospitalsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ViewAllHospitalsServlet</servlet-name>
    <url-pattern>/view</url-pattern>
</servlet-mapping>
</web-app>